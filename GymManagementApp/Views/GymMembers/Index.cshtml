@model IEnumerable<GymManagementApp.Models.GymMemberViewModel>

@{
    ViewData["Title"] = "Lista członków siłowni";
}

<h1>Lista członków siłowni</h1>

<form method="get">
    <input type="text" name="searchQuery" placeholder="Szukaj po nazwisku" />
    <button type="submit">Szukaj</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj nowego członka</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.MembershipType)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.MembershipType</td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
